generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  entries   Entry[]
}

model Entry {
  id        String   @id @default(cuid())
  content   String
  mood      String?  // Primary mood (for backward compatibility)
  moods     String?  // JSON array of top 3 moods: [{"mood":"happy","confidence":0.8},...]
  moodScore Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
